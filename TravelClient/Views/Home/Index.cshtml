@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <h1 class="display-4">Welcome to the Travel Client website!</h1>
  <p>See our collection of <a href="/reviews">reviews</a> for popular vacation destinations around the globe!</p>
</div>
<br><hr>  
<figure class="text-center">
  <blockquote class="blockquote">
    <p>"The world is a book and those who do not travel read only one page."</p>
  </blockquote>
  <figcaption class="blockquote-footer">
    <cite title="Source Title">St. Augustine</cite>
  </figcaption>
</figure>
<br>
<div class="card my-4">
  <div class="card-header">
    <h4 class="my-0 font-weight-normal">Our Mission</h4>
  </div>
  <div class="card-body">
    <p class="card-text">
      Travel Client is dedicated to being the world's foremost travel review site,
      providing comprehensive, authentic, and honest reviews of global travel destinations. Our mission is 
      to empower every traveler, helping them make well informed decisions about their next adventure, 
      based on our trusted community of globetrotters.
    </p>
  </div>
</div>


<div class="row justify-content-end">
  <div class="col-lg-4 col-md-6 col-sm-18">
    <div class="card my-5 position-absolute bottom-0 start-0" style="max-width: 550px;">
      <div class="card-body">
        <h2 class="text-center">Contact Us</h2>
        <p class="text-center">We'd love to hear from you! Please fill out the form below and we'll get back to you as soon as possible.</p>
        <form>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name">
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email">
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" id="message" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
