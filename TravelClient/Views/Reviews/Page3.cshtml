<div class="container">
    <h1 class="my-4">All Travel Reviews:</h1>

    <p>@Html.ActionLink("Add a new review", "Create", null, new { @class = "btn btn-primary" })</p>

    <ul class="list-group mb-4">
    @foreach (Review review in Model)
    {
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <strong>@review.Destination</strong> | @review.Country, @review.City
        <a href="/Reviews/Details/@(review.ReviewId)" class="btn btn-secondary">View Details</a>
      </li>
    }
    </ul>

  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="Page2">Previous</a></li>
      <li class="page-item"><a class="page-link" href="Page1">1</a></li>
      <li class="page-item"><a class="page-link" href="Page2">2</a></li>
      <li class="page-item disabled"><a class="page-link" href="Page3">3</a></li>
      <li class="page-item disabled"><a class="page-link" href="Page3">Next</a></li>
    </ul>
  </nav>

</div>